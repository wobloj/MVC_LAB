@model MVC_LAB.Models.Person.PersonViewModel
@{
    ViewData["Title"] = "Person Page";
}

<div class="text-center">
    <h1 class="display-4">Person</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">City</th>
                <th scope="col">Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Persons){
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.Name</td>
                    <td>@item.City</td>
                    <td>@item.Gender</td>
                </tr>
            }
        </tbody>
    </table>
</div>